<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="412dp"
                    android:layout_height="240dp"/>

                <ImageView
                    android:id="@+id/twinRoom"
                    android:layout_width="850px"
                    android:layout_height="570px"
                    android:src="@drawable/twin_room"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="850px"
                    android:layout_height="match_parent"
                    android:textStyle="bold|normal"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:text="Twin Room"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/suiteRoom"
                    android:layout_width="850px"
                    android:layout_height="420px"
                    android:src="@drawable/suite_room"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="850px"
                    android:layout_height="match_parent"
                    android:textStyle="bold|normal"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:text="Sweet Room"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/presidentRoom"
                    android:layout_width="850px"
                    android:layout_height="480px"
                    android:src="@drawable/president_suite"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="850px"
                    android:layout_height="match_parent"
                    android:textStyle="bold|normal"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:text="President Room"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="412dp"
                        android:layout_height="240dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/cover" />
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="160dp"
                        android:text="Room"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold|normal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>