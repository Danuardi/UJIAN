<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GalleryActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="412dp"
                android:layout_height="240dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/galeri1"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:src="@drawable/galeri1"
                    android:layout_gravity="start"/>
                <TextView
                    android:layout_width="12dp"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/galeri2"
                    android:layout_width="200dp"
                    android:layout_height="130dp"
                    android:src="@drawable/galeri2"
                    android:layout_gravity="end"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/galeri3"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:src="@drawable/galeri3"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/galeri4"
                        android:layout_width="194dp"
                        android:layout_height="150dp"
                        android:src="@drawable/galeri4"
                        android:layout_gravity="end"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/galeri5"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:src="@drawable/galeri5"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/galeri6"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:src="@drawable/galeri6"
                        android:layout_gravity="end"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/galeri7"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:src="@drawable/galeri7"
                        android:layout_gravity="start"/>
                    <TextView
                        android:layout_width="12dp"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/galeri8"
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:src="@drawable/galeri8"
                        android:layout_gravity="end"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="412dp"
        android:layout_height="240dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="160dp"
        android:text="Gallery"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold|normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>